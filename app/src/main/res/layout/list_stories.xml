<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="8dp">
    <!--android:background="@drawable/selector"-->
    <!--&gt;-->
    <ImageView
        android:id="@+id/tv_imageBackground"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/white"
        >
    </ImageView>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:layout_alignLeft="@+id/tv_imageBackground"
        android:layout_alignTop="@+id/tv_imageBackground"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:layout_alignRight="@+id/tv_imageBackground"
        android:layout_alignBottom="@+id/tv_imageBackground"
        android:textColor="@color/white"
        />

</RelativeLayout>